<script>
document.addEventListener('DOMContentLoaded', function() {
    // Get current page URL
    const currentUrl = window.location.pathname;
    const currentController = '@ViewContext.RouteData.Values["Controller"]';
    const currentAction = '@ViewContext.RouteData.Values["Action"]';

    // Function to set active menu item
    function setActiveMenuItem() {
        // Remove all active classes first
        document.querySelectorAll('.side-nav-item').forEach(item => {
            item.classList.remove('active', 'has-active-child');
        });

        // Find matching menu items
        const menuLinks = document.querySelectorAll('.side-nav-link');
        let activeFound = false;

        // First pass: Try exact URL match
        menuLinks.forEach(link => {
            const href = link.getAttribute('href');

            // Skip empty or invalid hrefs
            if (!href || href === '#' || href === '' || href === window.location.origin + '/') {
                return;
            }

            // Normalize URLs for comparison
            const normalizedHref = href.replace(window.location.origin, '');
            const normalizedCurrentUrl = currentUrl;

            // Check if this link matches current page by URL first (most accurate)
            if (normalizedHref === normalizedCurrentUrl) {
                const parentItem = link.closest('.side-nav-item');
                if (parentItem) {
                    parentItem.classList.add('active');
                    activeFound = true;

                    // If this is a submenu item, also mark parent as having active child
                    const parentCollapse = link.closest('.collapse');
                    if (parentCollapse) {
                        const parentToggle = document.querySelector(`[href="#${parentCollapse.id}"]`);
                        if (parentToggle) {
                            const parentMenuItem = parentToggle.closest('.side-nav-item');
                            if (parentMenuItem) {
                                parentMenuItem.classList.add('has-active-child');
                                // Expand the parent menu
                                parentCollapse.classList.add('show');
                            }
                        }
                    }
                }
            }
        });

        // Second pass: Try controller-based matching if no exact match found
        if (!activeFound && currentController) {
            menuLinks.forEach(link => {
                const href = link.getAttribute('href');

                // Skip empty or invalid hrefs
                if (!href || href === '#' || href === '' || href === window.location.origin + '/') {
                    return;
                }

                // Check if href contains the controller name
                if (href.includes(`/${currentController}/`)) {
                    const parentItem = link.closest('.side-nav-item');
                    if (parentItem) {
                        parentItem.classList.add('active');
                        activeFound = true;

                        // If this is a submenu item, also mark parent as having active child
                        const parentCollapse = link.closest('.collapse');
                        if (parentCollapse) {
                            const parentToggle = document.querySelector(`[href="#${parentCollapse.id}"]`);
                            if (parentToggle) {
                                const parentMenuItem = parentToggle.closest('.side-nav-item');
                                if (parentMenuItem) {
                                    parentMenuItem.classList.add('has-active-child');
                                    // Expand the parent menu
                                    parentCollapse.classList.add('show');
                                }
                            }
                        }
                    }
                }
            });
        }

        // Third pass: Try fallback matching by controller mappings if still no match
        if (!activeFound && currentController) {
            // Define specific controller to href mappings for exact matching
            const controllerMappings = {
                'DataCategories': '/DataCategories',
                'SpafoneCategories': '/SpafoneCategories',
                'SpafonePackages': '/SpafonePackages',
