                'InternetCategories': '/InternetCategories',
                'PricingGroups': '/PricingGroups',
                'ElectricityAreas': '/ElectricityAreas',
                'WaterAreas': '/WaterAreas'
            };

            // Try to find by exact href match using mappings
            if (controllerMappings[currentController]) {
                const targetHref = controllerMappings[currentController];

                menuLinks.forEach(link => {
                    const href = link.getAttribute('href');

                    // Skip empty or invalid hrefs
                    if (!href || href === '#' || href === '' || href === window.location.origin + '/') {
                        return;
                    }

                    // Check if href contains the exact controller path
                    if (href.includes(targetHref)) {
                        const parentItem = link.closest('.side-nav-item');
                        if (parentItem && !parentItem.classList.contains('active')) {
                            parentItem.classList.add('active');
                            activeFound = true;

                            // If this is a submenu item, also mark parent as having active child
                            const parentCollapse = link.closest('.collapse');
                            if (parentCollapse) {
                                const parentToggle = document.querySelector(`[href="#${parentCollapse.id}"]`);
                                if (parentToggle) {
                                    const parentMenuItem = parentToggle.closest('.side-nav-item');
                                    if (parentMenuItem) {
                                        parentMenuItem.classList.add('has-active-child');
                                        // Expand the parent menu
                                        parentCollapse.classList.add('show');
                                    }
                                }
                            }
                        }
                    }
                });
            }
        }
    }

    // Set active menu item on page load
    setActiveMenuItem();

    // Add click handlers to menu items for immediate visual feedback
    document.querySelectorAll('.side-nav-link').forEach(link => {
