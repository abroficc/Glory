@model Glory77.Models.Provider

@{
    Layout = "_VerticalLayout";
    ViewData["Title"] = "تفاصيل المزود";
    ViewData["Direction"] = "rtl";
}

@section styles {
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600&display=swap" rel="stylesheet">
    
    <style>
        body[dir="rtl"] * {
            font-family: "Cairo", system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        }
        
        .details-section {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            border: 1px solid #e9ecef;
        }
        
        [data-bs-theme="dark"] .details-section {
            background: #1e1f27;
            border-color: #293036;
        }
        
        .details-section-title {
            font-weight: 600;
            margin-bottom: 20px;
            color: #495057;
            font-size: 18px;
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 10px;
        }
        
        [data-bs-theme="dark"] .details-section-title {
            color: #aab8c5;
            border-bottom: 1px solid #374151;
        }
        
        .detail-label {
            font-weight: 600;
            color: #111827;
            margin-bottom: 5px;
            display: block;
        }
        
        [data-bs-theme="dark"] .detail-label {
            color: #e5e7eb;
        }
        
        .detail-value {
            color: #495057;
            margin-bottom: 15px;
            padding: 8px 12px;
            background: #fff;
            border-radius: 4px;
            border: 1px solid #e9ecef;
        }
        
        [data-bs-theme="dark"] .detail-value {
            color: #e5e7eb;
            background: #111827;
            border-color: #374151;
        }
        
        .btn-action {
            padding: 8px 20px;
            font-size: 16px;
        }
        
        .status-active {
            background-color: #d4edda;
            color: #155724;
            padding: 4px 8px;
            border-radius: 4px;
            font-weight: 500;
        }
        
        .status-inactive {
            background-color: #f8d7da;
            color: #721c24;
            padding: 4px 8px;
            border-radius: 4px;
            font-weight: 500;
        }
        
        [data-bs-theme="dark"] .status-active {
            background-color: #145214;
            color: #d4edda;
        }
        
        [data-bs-theme="dark"] .status-inactive {
            background-color: #721c24;
            color: #f8d7da;
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">تفاصيل المزود</h4>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="details-section">
                        <h5 class="details-section-title">معلومات المزود</h5>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="detail-label">اسم المزود</label>
                                    <div class="detail-value">@Html.DisplayFor(model => model.ProviderName)</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="detail-label">الحالة</label>
                                    <div class="detail-value">
                                        @if (Model.Status == 1)
                                        {
                                            <span class="status-active">مفعل</span>
                                        }
                                        else
                                        {
                                            <span class="status-inactive">غير مفعل</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="detail-label">تاريخ الإنشاء</label>
                                    <div class="detail-value">@Html.DisplayFor(model => model.CreatedAt)</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-action">
                            <i class="fas fa-edit me-1"></i> تعديل
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-action">
                            <i class="fas fa-arrow-right me-1"></i> رجوع
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>