                $('#viewCategoryModal').modal('hide');
                $('#editCategoryModal').modal('show');
            });
            
            // Handle form submissions
            $('#addCategoryForm').on('submit', function(e) {
                e.preventDefault();
                
                // Reset validation states
                $('#addCategoryForm .is-invalid').removeClass('is-invalid');
                
                // Validation
                var isValid = true;
                var requiredFields = [
                    '#add-category', '#add-price'
                ];
                
                requiredFields.forEach(function(field) {
                    if (!$(field).val()) {
                        $(field).addClass('is-invalid');
                        isValid = false;
                    }
                });
                
                if (isValid) {
                    // In a real application, you would send the data to the server here
                    alert('تم إضافة الفئة بنجاح');
                    $('#addCategoryModal').modal('hide');
                    // Reset form
                    $('#addCategoryForm')[0].reset();
                } else {
                    alert('الرجاء ملء جميع الحقول المطلوبة بشكل صحيح');
                }
            });
            
            $('#editCategoryForm').on('submit', function(e) {
                e.preventDefault();
                
                // Reset validation states
                $('#editCategoryForm .is-invalid').removeClass('is-invalid');
                
                // Validation
                var isValid = true;
                var requiredFields = [
                    '#edit-category', '#edit-price'
                ];
                
                requiredFields.forEach(function(field) {
                    if (!$(field).val()) {
                        $(field).addClass('is-invalid');
                        isValid = false;
                    }
                });
                
                if (isValid) {
                    // In a real application, you would send the data to the server here
                    alert('تم تعديل الفئة بنجاح');
                    $('#editCategoryModal').modal('hide');
                } else {
                    alert('الرجاء ملء جميع الحقول المطلوبة بشكل صحيح');
                }
            });
            
            // Add validation classes on focusout for required fields
            $('#addCategoryForm input[required], #addCategoryForm select[required], #editCategoryForm input[required], #editCategoryForm select[required]').on('focusout', function() {
                if (!$(this).val()) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });
            
            // Remove validation error when user starts typing
            $('#addCategoryForm input, #addCategoryForm select, #editCategoryForm input, #editCategoryForm select').on('input change', function() {
                $(this).removeClass('is-invalid');
            });
            
        });
