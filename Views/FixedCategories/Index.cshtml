    <script>
        $(function () {
            // Initialize DataTable
            const dt = $("#categoriesTable").DataTable({
                paging: true,
                lengthChange: false,
                searching: false,
                ordering: true,
                info: true,
                autoWidth: true,
                scrollX: false,
                responsive: false,
                // Add buttons extension
