                // Trigger DataTable Excel button
                dt.button('.buttons-excel').trigger();
            });
            
            // Handle select all columns button
            $('#selectAllColumns').on('click', function() {
                // Show all columns
                dt.columns().visible(true);
                // Update button text
                $(this).text('إلغاء تحديد الكل');
                // Change button to deselect all
                $(this).off('click').on('click', function() {
                    // Hide all columns except first (checkbox) and last (actions)
                    dt.columns(':gt(0):lt(-1)').visible(false);
                    // Update button text
                    $(this).text('تحديد جميع');
                    // Change button back to select all
