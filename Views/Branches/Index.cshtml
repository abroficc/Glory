        /* Popup menu card styles */
        #popupMenuModal .card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            border: 1px solid rgba(0, 0, 0, 0.125);
        }
        
        #popupMenuModal .card:hover {
