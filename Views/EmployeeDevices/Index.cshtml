    <!-- bootstrap-select js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>

    <script>
        $(function () {
            // Variable to track the currently selected row
            let selectedRow = null;
            
            // Initialize DataTable
            const dt = $("#reportsTable").DataTable({
                paging: true,
                lengthChange: false,
                searching: false,
                ordering: true,
                info: true,
                autoWidth: false,
                responsive: true,
                // Add buttons extension - using 'frtip' to avoid default button placement
                dom: 'frtip',
                buttons: [
                    {
                        extend: 'print',
                        text: 'طباعه',
                        className: 'btn btn-outline-secondary btn-sm',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'colvis',
                        text: 'تحديد الحقول',
                        className: 'btn btn-outline-secondary btn-sm',
                        collectionLayout: 'fixed two-column'
                    },
                    {
                        extend: 'excelHtml5',
                        text: 'تصدير اكسل',
                        className: 'btn btn-outline-secondary btn-sm',
                        exportOptions: {
                            columns: ':visible'
                        }
                    }
                ],
                language: {
                    emptyTable: "لا توجد بيانات",
                    info: "إظهار _START_ إلى _END_ من _TOTAL_ سجل",
                    infoEmpty: "إظهار 0 إلى 0 من 0",
                    paginate: { first:"الأولى", last:"الأخيرة", next:"التالي", previous:"السابق" },
                    buttons: {
                        colvis: 'تحديد الحقول',
                        print: 'طباعه',
                        excel: 'تصدير اكسل'
                    }
                }
            });
            
            // Create and move buttons to filter section
            dt.buttons().container().appendTo('#datatables-buttons-container');
            
            // Initially hide the buttons container until filter section is shown
            $('#datatables-buttons-container').hide();
            
            // Style the buttons after they are created
            setTimeout(function() {
                $('#datatables-buttons-container .btn').addClass('btn-sm');
            }, 100);
            
            // Handle filter toggle button
            $('#toggleFilters').on('click', function() {
                $('#filterSection').slideToggle();
                var icon = $(this).find('i');
                var textSpan = $('#toggleFiltersText');
                
                if (icon.hasClass('ti-filter-off')) {
                    icon.removeClass('ti-filter-off').addClass('ti-filter');
                    textSpan.text('إخفاء الفلترة');
                    $('#datatables-buttons-container').show();
                } else {
                    icon.removeClass('ti-filter').addClass('ti-filter-off');
                    textSpan.text('إظهار الفلترة');
                    $('#datatables-buttons-container').hide();
                }
            });
            
            // Initialize bootstrap-select for category selection with enhanced options
            function initializeSelectPicker() {
                $('.selectpicker').selectpicker({
                    style: 'btn-light',
                    liveSearch: true,
                    liveSearchPlaceholder: 'ابحث...',
                    noneSelectedText: 'لم يتم تحديد أي شيء',
                    noneResultsText: 'لا توجد نتائج لـ {0}',
                    selectAllText: 'تحديد الكل',
                    deselectAllText: 'إلغاء تحديد الكل',
                    dropupAuto: false,   // منع السلوك التلقائي
                    width: '100%',
                    container: 'body'    // إخراج القائمة خارج أي كارد/مودال
                });
            }
            
            // Initialize selectpickers when document is ready
            initializeSelectPicker();
            
            // Re-initialize bootstrap-select when modals are shown or hidden
            $('.modal').on('shown.bs.modal hidden.bs.modal', function () {
                $('.selectpicker').selectpicker('refresh');
            });

            // Handle reset filters button
            $('#resetFilters').on('click', function() {
                // Reset all filter input fields
                $('#filter-id').val('');
                $('#filter-employee').val('');
                $('#filter-device').val('');
                $('#filter-employee-id').val('');
                $('#filter-date').val('');
                $('#filter-records').selectpicker('val', '');
                $('.selectpicker').selectpicker('refresh');
                alert('تم إعادة تعيين الفلاتر');
            });
            
            // Handle row selection
            $('#reportsTable tbody').on('click', 'tr', function(e) {
                // Prevent row selection when clicking on action buttons or dropdowns
                if ($(e.target).closest('.dropdown-toggle, .dropdown-menu, .btn').length) {
                    return;
                }
                
                // Toggle selection
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');
                    selectedRow = null;
                } else {
                    // Remove selection from other rows
                    $('#reportsTable tbody tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                    selectedRow = $(this);
                }
                
                // Enable/disable top action buttons based on selection
                if (selectedRow) {
                    $('#topEditButton, #topViewButton').removeClass('disabled');
                } else {
                    $('#topEditButton, #topViewButton').addClass('disabled');
                }
            });
            
            // Handle select all checkbox
            $('#selectAll').on('change', function() {
                const isChecked = $(this).is(':checked');
                $('#reportsTable tbody .form-check-input').not(this).prop('checked', isChecked);
                
                // If all rows are selected, enable top action buttons
                if (isChecked) {
                    $('#topEditButton, #topViewButton').removeClass('disabled');
                } else {
                    $('#topEditButton, #topViewButton').addClass('disabled');
                    selectedRow = null;
                }
            });
            
            // Handle individual checkbox selection
            $('#reportsTable tbody').on('change', '.form-check-input', function() {
                // If any checkbox is checked, enable top action buttons
                if ($('#reportsTable tbody .form-check-input:checked').length > 0) {
                    $('#topEditButton, #topViewButton').removeClass('disabled');
                } else {
                    $('#topEditButton, #topViewButton').addClass('disabled');
                    selectedRow = null;
                }
            });
            
            // Handle top action buttons
            $('#topEditButton').on('click', function(e) {
                e.preventDefault();
                if (selectedRow) {
                    editPackage(selectedRow);
                } else {
                    alert('الرجاء تحديد صف أولاً');
                }
            });
            
            $('#topViewButton').on('click', function(e) {
                e.preventDefault();
                if (selectedRow) {
                    viewPackage(selectedRow);
                } else {
                    alert('الرجاء تحديد صف أولاً');
                }
            });
            
            // Handle action buttons in the table
            $('#reportsTable').on('click', '[data-action]', function (e) {
                e.preventDefault(); // Prevent default action
                const action = $(this).data('action');
                const row = $(this).closest('tr');
                
                switch (action) {
                    case 'view':
                        viewPackage(row);
                        break;
                    case 'edit':
                        editPackage(row);
                        break;
                }
            });
            
            // Function to view package
            function viewPackage(row) {
                // In a real application, you would fetch the data from the server
                // For now, we'll just show the modal with placeholder content
                console.log('Showing view modal');
                
                $('#viewDeviceModal').modal('show');
            }
            
            // Function to edit package (show the new add device modal)
            function editPackage(row) {
                // In a real application, you would populate the form with data from the server
                // For now, we'll just show the new add device modal
                console.log('Showing add device modal');
                
                // Show the new add device modal
                $('.wrapper-layout').show();
            }
            
            // Handle refresh button
            $('#refreshBtn').on('click', function() {
                location.reload();
            });
            
            // Handle apply filters button
            $('#applyFilters').on('click', function() {
                alert('تم تطبيق الفلاتر');
                // In a real application, you would filter the DataTable here
            });
            
            // Handle edit from view modal
            $('#editFromViewBtn').on('click', function() {
                $('#viewDeviceModal').modal('hide');
                // Show the new add device modal
                $('.wrapper-layout').show();
            });
            
            // Handle form submission
            $('#addDeviceForm').on('submit', function(e) {
                e.preventDefault();
                // In a real application, you would submit the form data to the server
                console.log('Form submitted');
                // Close the modal after submission
                $('#addDeviceModal').modal('hide');
                // Show success message
                alert('تم حفظ الجهاز بنجاح');
            });
            
            // Show the modal when the add button is clicked
            $('.btn-outline-success').on('click', function(e) {
                e.preventDefault();
                $('#addDeviceModal').modal('show');
            });
            
            // Handle edit from view modal
            $('#editFromViewBtn').on('click', function() {
                $('#viewDeviceModal').modal('hide');
                $('#addDeviceModal').modal('show');
            });
            
            // Select all checkboxes
            $('#selectAll').on('change', function() {
                $('#reportsTable tbody .form-check-input').not(this).prop('checked', this.checked);
            });
        });
    </script>
