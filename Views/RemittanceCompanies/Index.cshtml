    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    <!-- bootstrap-select js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/i18n/defaults-ar_AR.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Set Bootstrap version for selectpicker
            $.fn.selectpicker.Constructor.BootstrapVersion = '5';
            
            // Initialize DataTable
            var table = $('#companiesTable').DataTable({
                responsive: true,
                pageLength: 10,
                dom: 'Bfrtip', // Include buttons
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json",
                    emptyTable: "لا توجد بيانات",
                    info: "إظهار _START_ إلى _END_ من _TOTAL_ سجل",
                    infoEmpty: "إظهار 0 إلى 0 من 0",
                    paginate: { first:"الأولى", last:"الأخيرة", next:"التالي", previous:"السابق" }
                },
                buttons: [
                    {
                        extend: 'print',
                        text: 'طباعه',
                        className: 'btn btn-outline-secondary btn-sm',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'colvis',
                        text: 'تحديد الحقول',
                        className: 'btn btn-outline-secondary btn-sm',
                        collectionLayout: 'fixed two-column',
                        postfixButtons: ['colvisRestore']
                    },
                    {
                        extend: 'excelHtml5',
                        text: 'تصدير اكسل',
                        className: 'btn btn-outline-secondary btn-sm',
                        exportOptions: {
                            columns: ':visible'
                        }
                    }
                ]
            });
            
            // Move buttons to filter section
            table.buttons().container().appendTo('#datatables-buttons-container');
            
            // Hide the default buttons container
            $('.dt-buttons').hide();
            
            // Toggle filter section
            $('#toggleFilters').click(function() {
                $('#filterSection').slideToggle();
                var icon = $(this).find('i');
                var text = $('#toggleFiltersText');
                if (icon.hasClass('ti-filter-off')) {
                    icon.removeClass('ti-filter-off').addClass('ti-filter');
                    text.text('إخفاء الفلترة');
                } else {
                    icon.removeClass('ti-filter').addClass('ti-filter-off');
                    text.text('إظهار الفلترة');
                }
            });
            
            // Select all checkboxes
            $('#selectAll').click(function() {
                $('.company-checkbox').prop('checked', this.checked);
            });
            
            // Refresh button
            $('#refreshBtn').click(function() {
                location.reload();
            });
            
            // Initialize bootstrap select
            $('.selectpicker').selectpicker();
            
            // Initialize selectpickers in modals when they are shown
            $('#addCompanyModal, #editCompanyModal').on('shown.bs.modal', function () {
                $('.selectpicker', this).selectpicker('render');
            });
            
            // Handle reset filters button
            $('#resetFilters').on('click', function() {
                // Reset all filter input fields
                $('#filter-id').val('');
                $('#filter-company-name').val('');
                $('#filter-status').selectpicker('val', '');
                $('#filter-records').selectpicker('val', '');
                $('.selectpicker').selectpicker('refresh');
                alert('تم إعادة تعيين الفلاتر');
            });
            
            // Handle apply filters button (you can implement actual filtering logic here)
            $('#applyFilters').on('click', function() {
                alert('تم تطبيق الفلاتر');
                // In a real application, you would filter the DataTable here
            });
            
            // Handle print button
            $('#printButton').on('click', function() {
                table.button(0).trigger();
            });
            
            // Handle export to Excel button
            $('#exportExcelButton').on('click', function() {
                table.button(2).trigger();
            });
            
            // Handle select all columns button
            $('#selectAllColumns').on('click', function() {
                // Get all column visibility buttons
                var columnButtons = table.buttons('.buttons-columnVisibility');
                
                // Check if all columns are currently visible
                var allVisible = true;
                $.each(columnButtons[0], function(index, buttonIndex) {
                    var button = table.button(buttonIndex);
                    if (!button.active()) {
                        allVisible = false;
                        return false;
                    }
                });
                
                // Toggle visibility of all columns
                $.each(columnButtons[0], function(index, buttonIndex) {
                    var button = table.button(buttonIndex);
                    if (allVisible) {
                        // Hide all columns
                        if (button.active()) {
                            button.trigger();
                        }
                    } else {
                        // Show all columns
                        if (!button.active()) {
                            button.trigger();
                        }
                    }
                });
            });
            
            // Handle action buttons
            $('#topEditButton').click(function(e) {
                e.preventDefault();
                var checkedBoxes = $('.company-checkbox:checked');
                if (checkedBoxes.length === 0) {
                    alert('الرجاء تحديد شركة واحدة على الأقل للتعديل');
                    return;
                }
                
                // For now, we'll just edit the first selected item
                var firstChecked = checkedBoxes.first();
                var row = firstChecked.closest('tr');
                if (row.hasClass('child')) {
                    row = row.prev();
                }
                
                // Get row data
                var companyId = firstChecked.val();
                var companyNumber = row.find('td:eq(1)').text();
                var companyName = row.find('td:eq(2)').text();
                var connectionNumber = row.find('td:eq(3)').text();
                var entity = row.find('td:eq(4)').text();
                
                // Populate edit modal
                $('#editCompanyId').val(companyId);
                $('input[name="name"]', $('#editCompanyForm')).val(companyName);
                $('input[name="linkid"]', $('#editCompanyForm')).val(connectionNumber);
                // TODO: Populate other fields as needed
                
                // Show edit modal
                $('#editCompanyModal').modal('show');
            });
            
            $('#topViewButton').click(function(e) {
                e.preventDefault();
                var checkedBoxes = $('.company-checkbox:checked');
                if (checkedBoxes.length === 0) {
                    alert('الرجاء تحديد شركة واحدة على الأقل للمشاهدة');
                    return;
                }
                
                // For now, we'll just view the first selected item
                var firstChecked = checkedBoxes.first();
                var row = firstChecked.closest('tr');
                if (row.hasClass('child')) {
                    row = row.prev();
                }
                
                // Get row data
                var companyNumber = row.find('td:eq(1)').text();
                var companyName = row.find('td:eq(2)').text();
                var connectionNumber = row.find('td:eq(3)').text();
                var entity = row.find('td:eq(4)').text();
                
                // Populate view modal
                $('#viewCompanyNumber').text(companyNumber);
                $('#viewCompanyName').text(companyName);
                $('#viewConnectionNumber').text(connectionNumber);
                $('#viewEntity').text(entity);
                
                // Show view modal
                $('#viewCompanyModal').modal('show');
            });
            
            // Handle dropdown actions
            $('#companiesTable').on('click', '[data-action="edit"]', function(e) {
                e.preventDefault();
                var row = $(this).closest('tr');
                if (row.hasClass('child')) {
                    row = row.prev();
                }
                
                // Get row data
                var companyId = row.find('.company-checkbox').val();
                var companyNumber = row.find('td:eq(1)').text();
                var companyName = row.find('td:eq(2)').text();
                var connectionNumber = row.find('td:eq(3)').text();
                var entity = row.find('td:eq(4)').text();
                
                // Populate edit modal
                $('#editCompanyId').val(companyId);
                $('input[name="name"]', $('#editCompanyForm')).val(companyName);
                $('input[name="linkid"]', $('#editCompanyForm')).val(connectionNumber);
                
                // Show edit modal
                $('#editCompanyModal').modal('show');
            });
            
            $('#companiesTable').on('click', '[data-action="view"]', function(e) {
                e.preventDefault();
                var row = $(this).closest('tr');
                if (row.hasClass('child')) {
                    row = row.prev();
                }
                
                // Get row data
                var companyNumber = row.find('td:eq(1)').text();
                var companyName = row.find('td:eq(2)').text();
                var connectionNumber = row.find('td:eq(3)').text();
                var entity = row.find('td:eq(4)').text();
                
                // Populate view modal
                $('#viewCompanyNumber').text(companyNumber);
                $('#viewCompanyName').text(companyName);
                $('#viewConnectionNumber').text(connectionNumber);
                $('#viewEntity').text(entity);
                
                // Show view modal
                $('#viewCompanyModal').modal('show');
            });
            
            // Handle form submissions
            $('#addCompanyForm').on('submit', function(e) {
                e.preventDefault();
                
                // In a real application, you would submit the form data via AJAX
                alert('تم إضافة الشركة بنجاح!');
                $('#addCompanyModal').modal('hide');
                this.reset();
            });
            
            $('#editCompanyForm').on('submit', function(e) {
                e.preventDefault();
                
                // In a real application, you would submit the form data via AJAX
                alert('تم تحديث الشركة بنجاح!');
                $('#editCompanyModal').modal('hide');
            });
        });
    </script>
}