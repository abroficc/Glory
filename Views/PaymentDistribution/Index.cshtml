                }
            });
            
            // Variable to track the currently selected row
            let selectedRow = null;
            
            // Initialize DataTable
            const dt = $("#categoriesTable").DataTable({
                paging: true,
                lengthChange: false,
                searching: false,
                ordering: true,
                info: true,
