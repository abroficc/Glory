      <div class="modal-body">
        <form id="formadd" name="formadd" method="post" enctype="multipart/form-data">

          <!-- ملاحظات -->
          <div class="alert alert-warning p-2">ملاحظة: يجب اختيار إما مجموعة أو عميل/وكيل. لا يجب اختيار كليهما في نفس الوقت!</div>
          <div class="alert alert-warning p-2">اختر المجموعة (مجموعة التسعيرات)</div>

          <!-- اختيار المجموعة -->
          <div class="mb-3">
            <label class="form-label fw-bold">المجموعة</label>
            <select name="groupid" id="groupid" class="form-select selectpicker" data-live-search="true" title="اختر المجموعة">
              <option value="0">بدون مجموعة</option>
              <option value="29">عميل مميز</option>
              <option value="32">الوكيل المميز</option>
              <option value="35">الوكلاء والتطبيقات</option>
              <option value="36">التطبيقات الأم</option>
              <option value="40">جراند كول تيليكوم</option>
              <option value="41">يمن موبايل صنعاء كاش</option>
              <option value="42">المجد تيليكوم</option>
              <option value="43">كو ماكس</option>
              <option value="44">تساهيل</option>
              <option value="45">المحلات</option>
              <option value="46">الأمين تيليكوم</option>
            </select>
          </div>

          <!-- اختيار العميل -->
