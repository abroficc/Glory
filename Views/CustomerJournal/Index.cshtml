                    $('#view-customer').text($(cells[3]).text().trim());
                    $('#view-date').text($(cells[2]).text().trim());
                    $('#view-creditor').text($(cells[4]).text().trim());
                    $('#view-debtor').text($(cells[5]).text().trim());
                    $('#view-statement').text($(cells[6]).text().trim());
                    $('#view-accounting-source').text($(cells[7]).text().trim());
                    
