                    // Reset selectpicker selection
                    $('#editAdSection').selectpicker('val', '');
                }
                $('#editAdvertisementModal').modal('show');
            });
            
            $('#topViewButton').click(function(e) {
                e.preventDefault();
                if ($('.category-checkbox:checked').length === 0) {
                    alert('الرجاء تحديد إعلان واحد على الأقل للمشاهدة');
                    return;
                }
                $('#viewAdvertisementModal').modal('show');
            });
            
            // Handle dropdown actions
            $('#categoriesTable').on('click', '[data-action="edit"]', function(e) {
                e.preventDefault();
                // Set the current edit row
                currentEditRow = $(this).closest('tr');
                // Pre-fill the edit form with data from the selected row
                if (currentEditRow.length > 0) {
                    var text = currentEditRow.find('td:eq(2)').text();
                    $('#editAdText').val(text);
                    // Reset selectpicker selection
                    $('#editAdSection').selectpicker('val', '');
                }
                $('#editAdvertisementModal').modal('show');
            });
            
            $('#categoriesTable').on('click', '[data-action="view"]', function(e) {
                e.preventDefault();
                $('#viewAdvertisementModal').modal('show');
            });
            
            // Handle form submission for adding new advertisement
            $('#addAdForm').on('submit', function(e) {
                e.preventDefault();
                
                var text = $('#addAdText').val();
                var section = $('#addAdSection option:selected').text();
                var link = $('#addAdLink').val();
                var today = new Date().toISOString().split('T')[0];
                
                // Get the next ID
                var nextId = table.rows().count() + 1;
                
                var newRow = [
                    '<td class="text-center"><div class="form-check"><input type="checkbox" class="form-check-input category-checkbox" value="' + nextId + '"></div></td>',
                    nextId,
                    text,
                    today,
                    '<td style="text-align: center;"><div class="dropdown"><button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">للمزيد</button><ul class="dropdown-menu dropdown-menu-end"><li><a class="dropdown-item" href="#" data-action="edit"><i class="fa fa-pencil me-1"></i> تعديل</a></li><li><a class="dropdown-item" href="#" data-action="view"><i class="fa fa-eye me-1"></i> مشاهدة</a></li><li><a class="dropdown-item" href="#"><i class="fa fa-trash me-1"></i> حذف</a></li></ul></div></td>'
