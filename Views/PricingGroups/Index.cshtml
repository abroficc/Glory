    <script>
        $(function () {
            // Wait for the DataTable to be initialized by pricing-groups.js
            setTimeout(function() {
                // Get the DataTable instance
                var dt = $('#categoriesTable').DataTable();
                
                // Function to update the table info text
                function updateTableInfoText() {
                    var info = dt.page.info();
                    var text = 'Showing ' + (info.start + 1) + ' to ' + info.end + ' of ' + info.recordsDisplay + ' entries';
                    $('#table-info-text').text(text);
                }
                
                // Initial update
                updateTableInfoText();
                
                // Update on page change
                $('#categoriesTable').on('page.dt', function() {
                    setTimeout(updateTableInfoText, 10);
                });
                
                // Update on search/filter
                $('#categoriesTable').on('search.dt', function() {
                    setTimeout(updateTableInfoText, 10);
                });
                
                // Move buttons to filter section if they exist
                if (dt && dt.buttons) {
                    dt.buttons().container().appendTo('#datatables-buttons-container');
                    
                    // Hide the default buttons container since we're using custom buttons
                    $('.dt-buttons').hide();
                    
                    // Ensure buttons are properly styled after initialization
                    setTimeout(function() {
                        $('.dt-buttons .btn').addClass('btn-sm');
                    }, 500);
                }
            }, 100);
            
            // Reinitialize buttons when filter section is shown
            $('#toggleFilters').on('click', function() {
                setTimeout(function() {
                    // Refresh button styles when filter section is toggled
                    $('.dt-buttons .btn').addClass('btn-sm');
                }, 100);
            });
            
            // Initialize bootstrap-select for category selection with enhanced options
            function initializeSelectPicker() {
                $('.selectpicker').selectpicker({
                    style: 'btn-light',
                    liveSearch: true,
                    liveSearchPlaceholder: 'ابحث...',
                    noneSelectedText: 'لم يتم تحديد أي شيء',
                    noneResultsText: 'لا توجد نتائج لـ {0}',
                    selectAllText: 'تحديد الكل',
                    deselectAllText: 'إلغاء تحديد الكل',
                    dropupAuto: false,   // منع السلوك التلقائي
                    width: '100%',
                    container: 'body'    // إخراج القائمة خارج أي كارد/مودال
                });
            }
            
            // Ensure all selectpickers have live search enabled
            function ensureLiveSearch() {
                $('.selectpicker').each(function() {
                    if (!$(this).data('selectpicker')) {
                        $(this).selectpicker({
                            style: 'btn-light',
                            liveSearch: true,
                            liveSearchPlaceholder: 'ابحث...',
                            noneSelectedText: 'لم يتم تحديد أي شيء',
                            noneResultsText: 'لا توجد نتائج لـ {0}',
                            selectAllText: 'تحديد الكل',
                            deselectAllText: 'إلغاء تحديد الكل',
                            dropupAuto: false,
                            width: '100%',
                            container: 'body'
                        });
                    }
                });
            }
            
            // Initialize selectpickers when document is ready
            initializeSelectPicker();
            ensureLiveSearch();
            
            // Re-initialize bootstrap-select when modals are shown or hidden
            $('.modal').on('shown.bs.modal hidden.bs.modal', function () {
                $('.selectpicker').selectpicker('refresh');
            });
            
            // Ensure selectpickers in modals are properly initialized
            $('.modal').on('shown.bs.modal', function () {
                ensureLiveSearch();
            });
            
            // Handle select all checkbox
            $('#selectAllCheckbox').on('change', function() {
                $('.row-checkbox').prop('checked', $(this).is(':checked'));
            });
            
            // Handle individual checkboxes
            $('tbody').on('change', '.row-checkbox', function() {
                let total = $('.row-checkbox').length;
                let checked = $('.row-checkbox:checked').length;
                $('#selectAllCheckbox').prop('checked', total === checked);
            });
            
            // Handle filter toggle button
            $('#toggleFilters').on('click', function() {
                var filterSection = $('#filterSection');
                var icon = $(this).find('i');
                var textSpan = $('#toggleFiltersText');
                
                if (filterSection.is(':visible')) {
                    // Hide the filter section
                    filterSection.hide();
                    icon.removeClass('ti-filter-off').addClass('ti-filter');
                    textSpan.text('إظهار الفلترة');
                } else {
                    // Show the filter section
                    filterSection.show();
                    icon.removeClass('ti-filter').addClass('ti-filter-off');
                    textSpan.text('إخفاء الفلترة');
                }
            });
            
            // Handle search button for mobile dropdown
            /*
            $('#searchMobileBtn').on('click', function() {
                $('#filter-mobile').selectpicker('toggle');
            });
            */
            
            // Handle apply filters button (search)
            $('#applyFilters').on('click', function() {
