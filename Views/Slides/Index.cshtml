          'font-weight': 'bold',
          'background-color': '#f8fafc',
          'color': '#16987e',
          'padding': '6px 10px'
        })
        .prepend('<i class="fa fa-angle-down me-1 text-primary"></i>')
        .on('click', function() {
          const $icon = $(this).find('i');
          const $nextOptions = $(this).nextUntil('.dropdown-header');

          if ($nextOptions.is(':visible')) {
            $nextOptions.slideUp(150);
            $icon.removeClass('fa-angle-up').addClass('fa-angle-down');
          } else {
            $nextOptions.slideDown(150);
            $icon.removeClass('fa-angle-down').addClass('fa-angle-up');
          }
        });
    });
  });

  // تفعيل البحث
  $(document).on('input', '.bs-searchbox input', function () {
    const val = $(this).val().toLowerCase();
    const $menu = $(this).closest('.dropdown-menu');
    const $headers = $menu.find('.dropdown-header');

    if (val.length > 0) {
      $headers.nextUntil('.dropdown-header').show();
    } else {
      $headers.each(function () {
        const $next = $(this).nextUntil('.dropdown-header');
        $next.hide();
        $(this).find('i').removeClass('fa-angle-up').addClass('fa-angle-down');
      });
    }
  });
});
