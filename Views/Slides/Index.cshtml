    const dropdownMenu = $(this).parent().find('.dropdown-menu .inner');

    // مرّ على كل optgroup
    $(this).find('optgroup').each(function(index, group) {
      const $header = dropdownMenu.find('.dropdown-header').eq(index);
      const $options = $header.nextUntil('.dropdown-header');

      // إخفاء الخيارات افتراضيًا
      $options.hide();

      // أضف سهم وإجعل العنوان قابل للنقر
      $header
        .css({
