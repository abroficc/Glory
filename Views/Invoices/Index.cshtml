            background: #111827;
            border-bottom: 1px solid #374151;
        }
        
        .dark .flatpickr-calendar .flatpickr-weekday {
            color: #e5e7eb;
        }
        
        .dark .flatpickr-calendar .flatpickr-day {
            color: #e5e7eb;
            border-radius: 8px;
        }
        
        .dark .flatpickr-calendar .flatpickr-day.today {
            border-color: #60a5fa;
        }
        
