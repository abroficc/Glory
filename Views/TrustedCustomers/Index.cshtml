@section Scripts {
<!-- jstree plugin Js-->
<script src="~/plugins/jstree/jstree.min.js"></script>
<script src="~/js/account-tree.js"></script>

<script>
  $(function () {
    // Show debug message
    $('#debug-message').show();
    
    // Test jQuery
    if (typeof $ === 'undefined') {
        $('#debug-message').removeClass('alert-info').addClass('alert-danger')
            .text('jQuery لم يتم تحميله بشكل صحيح');
        return;
    } else {
        $('#debug-message').append('<br>jQuery تم تحميله بشكل صحيح');
    }
    
    // Initialize the tree view
    try {
        if (typeof $.fn.jstree === 'undefined') {
            $('#debug-message').removeClass('alert-info').addClass('alert-danger')
                .text('jstree plugin لم يتم تحميله بشكل صحيح');
            return;
        }
        
        $('#trusted-customers-tree').jstree({
            core: {
                themes: {responsive: false},
                data: @Html.Raw(Json.Serialize(Model.TreeData))
            },
            plugins: ["types", "contextmenu"],
            types: {
                default: {icon: "ti ti-folder-filled fs-lg text-warning"},
                file: {icon: "ti ti-file-text fs-lg text-primary"}
            },
            contextmenu: {
                items: function(node) {
                    return {
                        "edit": {
                            "label": "تعديل",
                            "icon": "ti ti-pencil",
                            "action": function (obj) {
                                editCustomer(node);
                            }
                        },
                        "view": {
                            "label": "مشاهدة",
                            "icon": "ti ti-eye",
                            "action": function (obj) {
                                viewCustomer(node);
                            }
                        },
                        "delete": {
                            "label": "حذف",
                            "icon": "ti ti-trash",
                            "action": function (obj) {
                                deleteCustomer(node);
                            }
                        }
                    };
                }
            }
        }).on('ready.jstree', function() {
            $('#debug-message').append('<br>jstree تم تهيئة الشجرة بشكل صحيح');
        }).on('error.jstree', function(e, data) {
            console.error('jstree error:', data);
            $('#debug-message').removeClass('alert-info').addClass('alert-danger')
                .text('حدث خطأ أثناء تهيئة jstree: ' + data.reason);
        });
    } catch (error) {
        console.error('Error initializing jstree:', error);
        $('#debug-message').removeClass('alert-info').addClass('alert-danger')
            .text('حدث خطأ أثناء تحميل شجرة العملاء: ' + error.message);
    }
    
    // Handle popup menu actions
    $('#popupMenuModal').on('click', '.btn', function() {
      var buttonText = $(this).text().trim();
      
      // Handle export action
      if (buttonText.includes('تصدير')) {
        alert('سيتم تصدير بيانات العملاء إلى ملف');
      }
      // Handle print action
      else if (buttonText.includes('طباعة')) {
        alert('سيتم طباعة تقارير العملاء');
      }
      // Handle search action
      else if (buttonText.includes('بحث')) {
        alert('سيتم فتح نافذة البحث المتقدم');
      }
      // Handle settings action
      else if (buttonText.includes('إعدادات')) {
        alert('سيتم فتح إعدادات العملاء');
      }
      // Handle help action
      else if (buttonText.includes('مساعدة')) {
        alert('سيتم عرض دليل المستخدم ومساعدة النظام');
      }
    });
    
    // When opening the popup menu, close any other open modals
    $('[data-bs-target="#popupMenuModal"]').on('click', function() {
      $('.modal').modal('hide');
    });
    
    // Handle view action from dropdown menu
    $('tbody').on('click', '[data-action="view"]', function(e) {
      e.preventDefault();
      
      // Get the customer data from the row
      var row = $(this).closest('tr');
      var customerName = row.find('td:nth-child(2)').text();
      var customerType = row.find('td:nth-child(5)').text();
      var customerPhone = row.find('td:nth-child(4)').text();
      
      // Populate the view modal with customer data
      $('#viewCustomerName').text(customerName);
      $('#viewCustomerType').text(customerType);
      $('#viewCustomerPhone').text(customerPhone);
      $('#viewCustomerEmail').text('example@email.com'); // Sample data
      $('#viewCustomerAddress').text('صنعاء - اليمن'); // Sample data
      
      // Show the view modal
      $('#viewCustomerModal').modal('show');
    });
    
    // Handle edit action from dropdown menu
    $('tbody').on('click', '[data-action="edit"]', function(e) {
      e.preventDefault();
      
      // Get the customer data from the row
      var row = $(this).closest('tr');
      var customerName = row.find('td:nth-child(2)').text();
      var customerType = row.find('td:nth-child(5)').text();
      var customerPhone = row.find('td:nth-child(4)').text();
      
      // Populate the edit modal with customer data
      $('#editCustomerName').val(customerName);
      $('#editCustomerType').val(getCustomerTypeValue(customerType));
      $('#editCustomerPhone').val(customerPhone);
      
      // Show the edit modal
      $('#editCustomerModal').modal('show');
    });
    
    // Handle view action from context menu
    function viewCustomer(node) {
      // Populate the view modal with customer data
      $('#viewCustomerName').text(node.text);
      $('#viewCustomerType').text('شركة'); // Sample data
      $('#viewCustomerPhone').text('777777777'); // Sample data
      $('#viewCustomerEmail').text('company@example.com'); // Sample data
      $('#viewCustomerAddress').text('صنعاء - اليمن'); // Sample data
      
      // Show the view modal
      $('#viewCustomerModal').modal('show');
    }
    
    // Handle edit action from context menu
    function editCustomer(node) {
      // Populate the edit modal with customer data
      $('#editCustomerName').val(node.text);
      $('#editCustomerType').val('company'); // Sample data
      $('#editCustomerPhone').val('777777777'); // Sample data
      
      // Show the edit modal
      $('#editCustomerModal').modal('show');
    }
    
    // Handle delete action from context menu
    function deleteCustomer(node) {
      if (confirm('هل أنت متأكد من حذف هذا العميل؟')) {
        // In a real application, you would send a request to the server to delete the customer
        alert('تم حذف العميل بنجاح!');
      }
    }
    
    // Handle the top view button click
    $('#topViewButton').on('click', function(e) {
      e.preventDefault();
      alert('الرجاء تحديد عميل من الشجرة لعرضه');
    });
    
    // Handle the top edit button click
    $('#topEditButton').on('click', function(e) {
      e.preventDefault();
      alert('الرجاء تحديد عميل من الشجرة لتعديله');
    });
    
    // Handle edit button in view modal
    $('#editFromViewBtn').on('click', function() {
      // Hide view modal and show edit modal
      $('#viewCustomerModal').modal('hide');
      $('#editCustomerModal').modal('show');
    });
    
    // Handle print button in view modal
    $('#printCustomerBtn').on('click', function() {
      var customerName = $('#viewCustomerName').text();
      alert('سيتم طباعة بيانات العميل: ' + customerName);
    });
    
    // Handle save button in edit modal
    $('#saveEditCustomerBtn').on('click', function() {
      // In a real application, you would send the data to the server here
      alert('تم حفظ تعديلات العميل بنجاح!');
      $('#editCustomerModal').modal('hide');
    });
    
    // Handle filter toggle button
    $('#toggleFilters').on('click', function() {
      var filterSection = $('#filterSection');
      var icon = $(this).find('i');
      var textSpan = $('#toggleFiltersText');
      
      if (filterSection.is(':visible')) {
        // Hide the filter section
        filterSection.hide();
        icon.removeClass('ti-filter-off').addClass('ti-filter');
        textSpan.text('إظهار الفلترة');
      } else {
        // Show the filter section
        filterSection.show();
        icon.removeClass('ti-filter').addClass('ti-filter-off');
        textSpan.text('إخفاء الفلترة');
      }
    });
    
    // Handle apply filters button
    $('#applyFilters').on('click', function() {
      // In a real application, you would apply the filters here
      alert('سيتم تطبيق الفلاتر المحددة');
    });
    
    // Handle reset filters button
    $('#resetFilters').on('click', function() {
      // Reset all filter input fields
      $('#filter-name').val('');
      $('#filter-type').val('');
      // In a real application, you would also reset the tree data
      alert('تم إعادة تعيين الفلاتر');
    });
    
    // Helper function to get customer type value
    function getCustomerTypeValue(customerType) {
      switch(customerType) {
        case 'شركة': return 'company';
        case 'مؤسسة': return 'institution';
        case 'وكيل': return 'agent';
        case 'وكالة': return 'agency';
        default: return 'company';
      }
    }
  });
</script>
}