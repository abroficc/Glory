    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.colVis.min.js"></script>
    
    <!-- bootstrap-select JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
    
    <!-- UI Polish JS -->
    <script src="~/js/ui-polish.js"></script>
    
    <!-- Voucher Modal JS -->
    <script src="~/js/voucher-modal.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize DataTable
            var table = $('#reportsTable').DataTable({
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json",
                    zeroRecords: "لا يوجد بيانات متاحة مطابقة حاليا",
                    emptyTable: "لا يوجد بيانات متاحة مطابقة حاليا",
                    buttons: {
                        colvis: 'تحديد الحقول',
                        print: 'طباعه',
                        excel: 'تصدير اكسل'
                    }
                },
                responsive: true,
                dom: 'rtip',
                buttons: [
                    {
                        extend: 'print',
                        text: 'طباعه',
                        className: 'btn btn-outline-secondary btn-sm',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'colvis',
                        text: 'تحديد الحقول',
                        className: 'btn btn-outline-secondary btn-sm',
                        collectionLayout: 'fixed two-column'
                    },
                    {
                        extend: 'excelHtml5',
                        text: 'تصدير اكسل',
                        className: 'btn btn-outline-secondary btn-sm',
                        exportOptions: {
                            columns: ':visible'
                        }
                    }
                ],
                pageLength: 25,
                order: [[ 5, "desc" ]] // Sort by created date descending
            });
            
            // Hide the default buttons container since we're using custom buttons
            $('.dt-buttons').hide();
            
            // Reinitialize buttons when filter section is shown
            $('#toggleFilters').on('click', function() {
                setTimeout(function() {
                    // Refresh button styles when filter section is toggled
                    $('.dt-buttons .btn').addClass('btn-sm');
                }, 100);
            });
            
            // Ensure buttons are properly styled after initialization
            setTimeout(function() {
                $('.dt-buttons .btn').addClass('btn-sm');
            }, 500);
            
            // Handle filter toggle button
            $('#toggleFilters').on('click', function() {
                var filterSection = $('#filterSection');
                var icon = $(this).find('i');
                var textSpan = $('#toggleFiltersText');
                
                if (filterSection.is(':visible')) {
                    // Hide the filter section
                    filterSection.hide();
                    icon.removeClass('ti-filter-off').addClass('ti-filter');
                    textSpan.text('إظهار الفلترة');
                } else {
                    // Show the filter section
                    filterSection.show();
                    icon.removeClass('ti-filter').addClass('ti-filter-off');
                    textSpan.text('إخفاء الفلترة');
                }
            });
            
            // Handle print button click
            $('#printButton').on('click', function() {
                table.button('.buttons-print').trigger();
            });
            
            // Handle export Excel button click
            $('#exportExcelButton').on('click', function() {
                table.button('.buttons-excel').trigger();
            });
            
            // Handle select all columns button click
            $('#selectAllColumns').on('click', function() {
                // Show all columns
                table.columns().visible(true);
                // Update button text
                $(this).text('إلغاء تحديد الكل');
                // Change button functionality to deselect all
                $(this).off('click').on('click', function() {
                    table.columns().visible(false);
                    // Update button text
                    $(this).text('تحديد جميع');
                    // Change button functionality back to select all
                    $(this).off('click').on('click', selectAllColumns);
                });
            });
            
            // Function to select all columns
            function selectAllColumns() {
                table.columns().visible(true);
                $('#selectAllColumns').text('إلغاء تحديد الكل').off('click').on('click', deselectAllColumns);
            }
            
            // Function to deselect all columns
            function deselectAllColumns() {
                table.columns().visible(false);
                $('#selectAllColumns').text('تحديد جميع').off('click').on('click', selectAllColumns);
            }
            
            // Reset filters
            $('#resetFilters').click(function() {
                $('#filter-operation-id, #filter-provider, #filter-date').val('');
                $('#filter-status').selectpicker('val', '');
                table.search('').draw();
            });
            
            // Apply filters
            $('#applyFilters').click(function() {
                var operationId = $('#filter-operation-id').val();
                var provider = $('#filter-provider').val();
                var date = $('#filter-date').val();
                var status = $('#filter-status').selectpicker('val');
                
                // Build search string
                var searchString = '';
                if (operationId) searchString += operationId + ' ';
                if (provider) searchString += provider + ' ';
                if (date) searchString += date + ' ';
                if (status) searchString += status + ' ';
                
                table.search(searchString.trim()).draw();
            });
            
            // Refresh button
            $('#refreshBtn').click(function() {
                location.reload();
            });
            
            // Select all checkboxes
            $('#selectAll').click(function() {
                $('.report-checkbox').prop('checked', this.checked);
            });
            
            // Initialize bootstrap select
            $('.selectpicker').selectpicker();
        });
    </script>
