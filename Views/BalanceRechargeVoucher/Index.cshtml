            direction: rtl;
            text-align: right;
        }
        
        [dir="rtl"] .daterangepicker .ranges li {
            text-align: right;
        }
        
        [dir="rtl"] .daterangepicker .drp-buttons {
            direction: rtl;
            text-align: left;
        }
        
        /* Custom flatpickr calendar styling to match React component */
        .flatpickr-calendar {
            direction: rtl;
            display: block !important; /* Ensure calendar is always displayed */
        }
        
