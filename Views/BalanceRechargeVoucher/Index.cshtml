@section Scripts {
    <!-- jstree plugin Js-->
    <script src="~/plugins/jstree/jstree.min.js"></script>
    <script src="~/js/account-tree.js"></script>
    <!-- flatpickr Js -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/ar.js"></script>

    <script>
      $(function () {
        // ===== Debug =====
        $('#debug-message').show();
        if (typeof $ === 'undefined') {
          $('#debug-message').removeClass('alert-info').addClass('alert-danger')
            .text('jQuery لم يتم تحميله بشكل صحيح');
          return;
        } else {
          $('#debug-message').append('<br>jQuery تم تحميله بشكل صحيح');
        }

        // ===== Flatpickr =====
        try {
          flatpickr("#v-date", { dateFormat: "Y-m-d", locale: "ar" });
          flatpickr("#edit-v-date", { dateFormat: "Y-m-d", locale: "ar" });
          // Initialize Flatpickr for the new add voucher modal
          flatpickr("#voucherForm input[placeholder='اختر التاريخ']", { dateFormat: "Y-m-d", locale: "ar" });
          $('#openCalendar').on('click', function(){ $('#v-date').focus(); });
          $('#openEditCalendar').on('click', function(){ $('#edit-v-date').focus(); });
        } catch(e) {
          console.warn('Flatpickr init warning:', e);
        }

        // ===== jsTree =====
        try {
          if (typeof $.fn.jstree === 'undefined') {
            $('#debug-message').removeClass('alert-info').addClass('alert-danger')
              .text('jstree plugin لم يتم تحميله بشكل صحيح');
          } else {
            $('#trusted-customers-tree').jstree({
              core: { themes: { responsive: false }, data: @Html.Raw(Json.Serialize(Model.TreeData)) },
              plugins: ["types", "contextmenu"],
              types: {
                default: { icon: "ti ti-folder-filled fs-lg text-warning" },
                file:    { icon: "ti ti-file-text fs-lg text-primary" }
              },
              contextmenu: {
                items: function(node) {
                  return {
                    "edit":   { label: "تعديل",   icon: "ti ti-pencil", action: function(){ editCustomer(node); } },
                    "view":   { label: "مشاهدة", icon: "ti ti-eye",    action: function(){ viewCustomer(node); } },
                    "delete": { label: "حذف",    icon: "ti ti-trash",  action: function(){ deleteCustomer(node); } }
                  };
                }
              }
            })
            .on('ready.jstree', function(){ $('#debug-message').append('<br>jstree تم تهيئة الشجرة بشكل صحيح'); })
            .on('error.jstree', function(e, data){
              console.error('jstree error:', data);
              $('#debug-message').removeClass('alert-info').addClass('alert-danger')
                .text('حدث خطأ أثناء تهيئة jstree: ' + data.reason);
            });
          }
        } catch (err) {
          console.error('Error initializing jstree:', err);
          $('#debug-message').removeClass('alert-info').addClass('alert-danger')
            .text('حدث خطأ أثناء تحميل شجرة العملاء: ' + err.message);
        }

        // ===== Popup menu buttons inside modal =====
        $('#popupMenuModal').on('click', '.btn', function() {
          var t = $(this).text().trim();
          if (t.includes('تصدير'))      alert('سيتم تصدير بيانات السندات إلى ملف');
          else if (t.includes('طباعة'))  alert('سيتم طباعة تقارير السندات');
          else if (t.includes('بحث'))    alert('سيتم فتح نافذة البحث المتقدم');
          else if (t.includes('إعدادات'))alert('سيتم فتح إعدادات السندات');
          else if (t.includes('مساعدة')) alert('سيتم عرض دليل المستخدم ومساعدة النظام');
        });

        // عند فتح قائمة الإجراءات أغلق أي مودال آخر
        $('[data-bs-target="#popupMenuModal"]').on('click', function(){ $('.modal').modal('hide'); });

        // ===== Helpers: قراءة القيم من الصف المختار =====
        function getRowData($row){
          return {
            voucherId:       $row.find('td:nth-child(2)').text(),
            voucherNumber:   $row.find('td:nth-child(3)').text(),
            voucherDate:     $row.find('td:nth-child(4)').text(),
            voucherType:     $row.find('td:nth-child(5)').text(),
            status:          $row.find('td:nth-child(6)').text(),
            account:         $row.find('td:nth-child(7)').text(),
            financialCenter: $row.find('td:nth-child(8)').text(),
            amount:          $row.find('td:nth-child(9)').text(),
            reference:       $row.find('td:nth-child(10)').text(),
            description:     $row.find('td:nth-child(11)').text()
          };
        }
        function splitVoucherNumber(voucherNumber){
          var serial = '', number = voucherNumber || '';
          if (voucherNumber && voucherNumber.includes('-')) {
            var parts = voucherNumber.split('-');
            serial = parts[0];
            number = parts[1] || '';
          }
          return { serial, number };
        }

        // ===== عرض من قائمة الصف =====
        $('tbody').on('click', '[data-action="view"]', function(e){
          e.preventDefault();
          var data = getRowData($(this).closest('tr'));
          var sn = splitVoucherNumber(data.voucherNumber);
          $('#view-v-type').text(data.voucherType);
          $('#view-v-serial').text(sn.serial);
          $('#view-v-number').text(sn.number);
          $('#view-v-date').text(data.voucherDate);
          $('#view-from-amount').text(data.amount);
          $('#view-from-center').text(data.financialCenter);
          $('#view-from-currency').text('USD');
          $('#view-from-fx').text('1.0000');
          $('#view-from-local').text(data.amount);
          $('#view-from-note').text(data.description);
          $('#view-from-ref').text(data.reference);
          $('#view-to-account').text(data.account);
          $('#view-to-amount').text(data.amount);
          $('#view-to-center').text(data.financialCenter);
          $('#view-to-currency').text('USD');
          $('#view-to-fx').text('1.0000');
          $('#view-to-local').text(data.amount);
          $('#view-to-note').text(data.description);
          $('#viewVoucherModal').modal('show');
        });

        // ===== تعديل من قائمة الصف =====
        $('tbody').on('click', '[data-action="edit"]', function(e){
          e.preventDefault();
          var data = getRowData($(this).closest('tr'));
          var sn = splitVoucherNumber(data.voucherNumber);
          $('#edit-v-type').val(data.voucherType);
          $('#edit-serial').val(sn.serial);
          $('#edit-number').val(sn.number);
          $('#edit-v-date').val(data.voucherDate);
          $('#edit-from-amount').val(data.amount);
          $('#edit-from-center').val(data.financialCenter);
          $('#edit-from-currency').val('USD');
          $('#edit-from-fx').val('1.0000');
          $('#edit-from-local').val(data.amount);
          $('#edit-from-note').val(data.description);
          $('#edit-from-ref').val(data.reference);
          $('#edit-to-account').val(data.account);
          $('#edit-to-amount').val(data.amount);
          $('#edit-to-center').val(data.financialCenter);
          $('#edit-to-currency').val('USD');
          $('#edit-to-fx').val('1.0000');
          $('#edit-to-local').val(data.amount);
          $('#edit-to-note').val(data.description);
          $('#editVoucherModal').modal('show');
        });

        // ===== تحديد الكل =====
        $('#selectAll').on('change', function(){
          $('.employee-checkbox').prop('checked', $(this).is(':checked'));
        });
        $('tbody').on('change', '.employee-checkbox', function(){
          $('#selectAll').prop('checked', $('.employee-checkbox').length === $('.employee-checkbox:checked').length);
        });

        // ===== دوال jsTree للسياق =====
        function viewCustomer(node){
          if (!node) { alert('الرجاء تحديد حساب من الشجرة لعرضه'); return; }
          $('#viewVoucherNumber').text(node.id);
          $('#viewVoucherDate').text(new Date().toISOString().split('T')[0]);
          $('#viewVoucherType').text(node.text);
          $('#viewVoucherStatus').text('مكتمل');
          $('#viewAccount').text(node.text);
          $('#viewFinancialCenter').text('مركز مالي 1');
          $('#viewAmount').text('0.00');
          $('#viewReference').text('');
          $('#viewDescription').text('');
          $('#viewCustomerModal').modal('show');
        }
        function editCustomer(node){
          if (!node) { alert('الرجاء تحديد حساب من الشجرة لتعديله'); return; }
          $('#editVoucherNumber').val(node.id);
          $('#editVoucherDate').val(new Date().toISOString().split('T')[0]);
          $('#editVoucherType').val(node.text);
          $('#editVoucherStatus').val('مكتمل');
          $('#editAccount').val(node.text);
          $('#editFinancialCenter').val('مركز مالي 1');
          $('#editAmount').val('0.00');
          $('#editReference').val('');
          $('#editDescription').val('');
          $('#editCustomerModal').modal('show');
        }
        function deleteCustomer(node){
          if (!node) { alert('الرجاء تحديد حساب من الشجرة لحذفه'); return; }
          if (confirm('هل أنت متأكد من حذف هذا السند؟')) alert('تم حذف السند بنجاح!');
        }

        // ===== الأزرار العلوية: مشاهدة/تعديل =====
        $('#topViewButton').on('click', function(e){
          e.preventDefault();
          var sel = $('.employee-checkbox:checked');
          if (sel.length === 0) return alert('الرجاء تحديد سند من الجدول لعرضه');
          if (sel.length > 1)  return alert('الرجاء تحديد سند واحد فقط لعرضه');

          var data = getRowData(sel.closest('tr'));
          var sn = splitVoucherNumber(data.voucherNumber);
          $('#view-v-type').text(data.voucherType);
          $('#view-v-serial').text(sn.serial);
          $('#view-v-number').text(sn.number);
          $('#view-v-date').text(data.voucherDate);
          $('#view-from-amount').text(data.amount);
          $('#view-from-center').text(data.financialCenter);
          $('#view-from-currency').text('USD');
          $('#view-from-fx').text('1.0000');
          $('#view-from-local').text(data.amount);
          $('#view-from-note').text(data.description);
          $('#view-from-ref').text(data.reference);
          $('#view-to-account').text(data.account);
          $('#view-to-amount').text(data.amount);
          $('#view-to-center').text(data.financialCenter);
          $('#view-to-currency').text('USD');
          $('#view-to-fx').text('1.0000');
          $('#view-to-local').text(data.amount);
          $('#view-to-note').text(data.description);
          $('#viewVoucherModal').modal('show');
        });

        $('#topEditButton').on('click', function(e){
          e.preventDefault();
          var sel = $('.employee-checkbox:checked');
          if (sel.length === 0) return alert('الرجاء تحديد سند من الجدول لتعديله');
          if (sel.length > 1)  return alert('الرجاء تحديد سند واحد فقط لتعديله');

          var data = getRowData(sel.closest('tr'));
          var sn = splitVoucherNumber(data.voucherNumber);
          $('#edit-v-type').val(data.voucherType);
          $('#edit-serial').val(sn.serial);
          $('#edit-number').val(sn.number);
          $('#edit-v-date').val(data.voucherDate);
          $('#edit-from-amount').val(data.amount);
          $('#edit-from-center').val(data.financialCenter);
          $('#edit-from-currency').val('USD');
          $('#edit-from-fx').val('1.0000');
          $('#edit-from-local').val(data.amount);
          $('#edit-from-note').val(data.description);
          $('#edit-from-ref').val(data.reference);
          $('#edit-to-account').val(data.account);
          $('#edit-to-amount').val(data.amount);
          $('#edit-to-center').val(data.financialCenter);
          $('#edit-to-currency').val('USD');
          $('#edit-to-fx').val('1.0000');
          $('#edit-to-local').val(data.amount);
          $('#edit-to-note').val(data.description);
          $('#editVoucherModal').modal('show');
        });

        // زر تعديل من نافذة العرض
        $('#editFromViewBtn').on('click', function(){
          $('#viewVoucherModal').modal('hide');
          $('#editVoucherModal').modal('show');
        });

        // ===== الفلاتر =====
        $('#toggleFilters').on('click', function(){
          var $sec = $('#filterSection');
          var $ic = $(this).find('i');
          var $txt = $('#toggleFiltersText');
          if ($sec.is(':visible')) {
            $sec.hide(); $ic.removeClass('ti-filter-off').addClass('ti-filter'); $txt.text('إظهار الفلترة');
          } else {
            $sec.show(); $ic.removeClass('ti-filter').addClass('ti-filter-off');  $txt.text('إخفاء الفلترة');
          }
        });

        $('#applyFilters').on('click', function(){
          var msg =
            'سيتم تطبيق الفلاتر المحددة:\n' +
            'القيمة: ' + $('#filter-value').val() + '\n' +
            'العميل: ' + $('#filter-customer').val() + '\n' +
            'الاعتماد: ' + $('#filter-authorization').val() + '\n' +
            'الترحيل: ' + $('#filter-posting').val() + '\n' +
            'المرجع: ' + $('#filter-reference').val() + '\n' +
            'المستخدم: ' + $('#filter-user').val() + '\n' +
            'المركز المالي: ' + $('#filter-financial-center').val() + '\n' +
            'نوع السند: ' + $('#filter-voucher-type').val() + '\n' +
            'رقم السند: ' + $('#filter-voucher-number').val() + '\n' +
            'التاريخ 1: ' + $('#filter-date-1').val() + '\n' +
            'التاريخ 2: ' + $('#filter-date-2').val();
          alert(msg);
        });

        $('#resetFilters').on('click', function(){
          $('#filter-value, #filter-customer, #filter-authorization, #filter-posting, #filter-reference, #filter-user, #filter-financial-center, #filter-voucher-type, #filter-voucher-number, #filter-date-1, #filter-date-2').val('');
          alert('تم إعادة تعيين الفلاتر');
        });

        // ===== تحديث الجدول =====
        $('#refreshBtn').on('click', function(){
          alert('سيتم تحديث بيانات الجدول');
          // TODO: نفّذ إعادة تحميل البيانات هنا
        });
        
        // ===== Handle form submission for add voucher modal =====
        $('#voucherForm').on('submit', function(e) {
          e.preventDefault();
          
          // Get form values
          var voucherType = $('#voucherForm select[aria-label="نوع السند"]').val();
          var voucherNumber = $('#voucherForm input[placeholder="الرقم"]').val();
          var voucherDate = $('#voucherForm input[placeholder="اختر التاريخ"]').val();
