          var fromCenter = $('#voucherForm select[aria-label="المركز المالي"]').eq(0).val();
          var fromCurrency = $('#voucherForm select[aria-label="العملة"]').eq(0).val();
          var fromFx = $('#voucherForm input[placeholder="سعر الصرف"]').eq(0).val();
          var fromLocal = $('#voucherForm input[placeholder="المقابل بالمحلي"]').eq(0).val();
          var fromNote = $('#voucherForm input[placeholder="اكتب البيان هنا"]').val();
          var fromRef = $('#voucherForm input[placeholder="المرجع"]').val();
          var toAccount = $('#voucherForm select[aria-label="اختر الحساب"]').val();
          var toCustomer = $('#voucherForm select[aria-label="اختر العميل"]').val();
          var toAmount = $('#voucherForm input[placeholder="المبلغ"]').eq(1).val();
          var toCenter = $('#voucherForm select[aria-label="المركز المالي"]').eq(1).val();
          var toCurrency = $('#voucherForm select[aria-label="العملة"]').eq(1).val();
          var toFx = $('#voucherForm input[placeholder="سعر الصرف"]').eq(1).val();
          var toLocal = $('#voucherForm input[placeholder="المقابل بالمحلي"]').eq(1).val();
          var toNote = $('#voucherForm input[placeholder="بيان العملية"]').val();
          
          // Validate required fields
          if (!voucherType || !voucherNumber || !voucherDate || !fromAmount || !toAccount || !toCustomer || !toAmount) {
            alert('الرجاء ملء جميع الحقول المطلوبة');
            return;
          }
          
          // In a real application, you would submit the data to the server here
          console.log('New voucher data:', {
            voucherType, voucherNumber, voucherDate, fromAmount, fromCenter, fromCurrency,
            fromFx, fromLocal, fromNote, fromRef, toAccount, toCustomer, toAmount, toCenter,
            toCurrency, toFx, toLocal, toNote
          });
          
          // Close the modal
          $('#addVoucherModal').modal('hide');
          
          // Show success message
          alert('تم حفظ السند بنجاح');
          
          // Reset form
          $('#voucherForm')[0].reset();
        });

      }); // END document ready
    </script>
