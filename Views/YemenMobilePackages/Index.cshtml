@section Scripts {
    <!-- jstree plugin Js-->
    <script src="~/plugins/jstree/jstree.min.js"></script>
    <!-- DataTables Js -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>
    <!-- DataTables Buttons Extension -->
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.colVis.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    
    <!-- bootstrap-select js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>

    <script>
        $(function () {
            // Initialize DataTable
            window.categoriesTable = $("#categoriesTable").DataTable({
                paging: true,
                lengthChange: false,
                searching: false,
                ordering: true,
                info: true,
                autoWidth: false,
                responsive: true,
                // Add buttons extension and place them in the custom container
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'print',
                        text: 'طباعه',
                        className: 'btn btn-outline-secondary btn-sm',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'colvis',
                        text: 'تحديد الحقول',
                        className: 'btn btn-outline-secondary btn-sm',
                        collectionLayout: 'fixed two-column'
                    },
                    {
                        extend: 'excelHtml5',
                        text: 'تصدير اكسل',
                        className: 'btn btn-outline-secondary btn-sm',
                        exportOptions: {
                            columns: ':visible'
                        }
                    }
                ],
                language: {
                    emptyTable: "لا توجد بيانات",
                    info: "إظهار _START_ إلى _END_ من _TOTAL_ سجل",
                    infoEmpty: "إظهار 0 إلى 0 من 0",
                    paginate: { first:"الأولى", last:"الأخيرة", next:"التالي", previous:"السابق" },
                    buttons: {
                        colvis: 'تحديد الحقول',
                        print: 'طباعه',
                        excel: 'تصدير اكسل'
                    }
                }
            });
            
            // Move buttons to filter section
            categoriesTable.buttons().container().appendTo('#datatables-buttons-container');
            
            // Initialize bootstrap-select for category selection with enhanced options
            function initializeSelectPicker() {
                $('.selectpicker').selectpicker({
                    style: 'btn-light',
                    liveSearch: true,
                    liveSearchPlaceholder: 'ابحث...',
                    noneSelectedText: 'لم يتم تحديد أي شيء',
                    noneResultsText: 'لا توجد نتائج لـ {0}',
                    selectAllText: 'تحديد الكل',
                    deselectAllText: 'إلغاء تحديد الكل',
                    dropupAuto: false,   // منع السلوك التلقائي
                    width: '100%',
                    container: 'body'    // إخراج القائمة خارج أي كارد/مودال
                });
            }
            
            // Initialize selectpickers when document is ready
            initializeSelectPicker();
            
            // Re-initialize bootstrap-select when modals are shown or hidden
            $('.modal').on('shown.bs.modal hidden.bs.modal', function () {
                $('.selectpicker').selectpicker('refresh');
            });
            
            // Re-initialize dropdowns when DataTable is redrawn
            $('#categoriesTable').on('draw.dt', function () {
                // Re-initialize any dropdowns if needed
                $('.dropdown-toggle').dropdown();
            });
            
            // Handle filter toggle button
            $('#toggleFilters').on('click', function() {
                var filterSection = $('#filterSection');
                var icon = $(this).find('i');
                var textSpan = $('#toggleFiltersText');
                
                if (filterSection.is(':visible')) {
                    // Hide the filter section with slide animation
                    filterSection.slideUp();
                    icon.removeClass('ti-filter-off').addClass('ti-filter');
                    textSpan.text('إظهار الفلترة');
                } else {
                    // Show the filter section with slide animation
                    filterSection.slideDown();
                    icon.removeClass('ti-filter').addClass('ti-filter-off');
                    textSpan.text('إخفاء الفلترة');
                }
            });

            // Handle reset filters button
            $('#resetFilters').on('click', function() {
                // Reset all filter input fields
                $('#filter-id').val('');
                $('#filter-package-name').val('');
                $('#filter-package-price').val('');
                $('#filter-year').selectpicker('val', '');
                $('#filter-records').selectpicker('val', '');
                $('.selectpicker').selectpicker('refresh');
                showToast('تم إعادة تعيين الفلاتر', 'info');
            });
            
            // Handle add button click
            $('.btn-outline-success').on('click', function() {
                // Clear all form fields
                $('#addCategoryForm')[0].reset();
                // Show the add modal
                $('#addCategoryModal').modal('show');
            });
            
            // Handle edit button click (top button)
            $('.btn-outline-primary').on('click', function() {
                // Check if any row is selected
                if ($('.category-checkbox:checked').length === 0) {
                    return;
                }
                
                // Get the first selected row
                var selectedRow = $('.category-checkbox:checked').first().closest('tr');
                populateEditForm(selectedRow);
                $('#editCategoryModal').modal('show');
            });
            
            // Handle view button click (top button)
            $('.btn-outline-info').on('click', function() {
                // Check if any row is selected
                if ($('.category-checkbox:checked').length === 0) {
                    showToast('الرجاء اختيار صف لعرضه', 'warning');
                    return;
                }
                
                // Get the first selected row
                var selectedRow = $('.category-checkbox:checked').first().closest('tr');
                populateViewModal(selectedRow);
                $('#viewCategoryModal').modal('show');
            });
            
            // Handle edit action from dropdown menu
            $(document).on('click', '[data-action="edit"]', function(e) {
                e.preventDefault();
                console.log('Edit action clicked');
                var row = $(this).closest('tr');
                populateEditForm(row);
                $('#editCategoryModal').modal('show');
            });
            
            // Handle view action from dropdown menu
            $(document).on('click', '[data-action="view"]', function(e) {
                e.preventDefault();
                console.log('View action clicked');
                var row = $(this).closest('tr');
                populateViewModal(row);
                $('#viewCategoryModal').modal('show');
            });
            
            // Variable to store the row to be deleted
            var rowToDelete = null;
            
            // Handle delete action from dropdown menu
            $(document).on('click', '[data-action="delete"]', function(e) {
                e.preventDefault();
                console.log('Delete action clicked');
                // Store the row to be deleted
                rowToDelete = $(this).closest('tr');
                // Show delete confirmation modal
                $('#deleteConfirmModal').modal('show');
            });
            
            // Handle confirm delete button click
            $('#confirmDeleteBtn').on('click', function() {
                if (rowToDelete) {
                    // Remove the row from the DataTable
                    categoriesTable.row(rowToDelete).remove().draw();
                    showToast('تم حذف الباقة بنجاح', 'success');
                    // Reset the row to delete
                    rowToDelete = null;
                }
                // Hide the modal
                $('#deleteConfirmModal').modal('hide');
            });
            
            // Handle delete button click (top button)
            $('.btn-outline-danger').on('click', function() {
                // Check if any row is selected
                if ($('.category-checkbox:checked').length === 0) {
                    showToast('الرجاء اختيار صف لحذفه', 'warning');
                    return;
                }
                
                // For multiple row deletion, we'll still use confirm for simplicity
                // In a real application, you might want a custom modal for this too
                if (confirm('هل أنت متأكد من حذف الباقة المحددة؟')) {
                    // Remove all selected rows from the DataTable
                    $('.category-checkbox:checked').each(function() {
                        var row = $(this).closest('tr');
                        categoriesTable.row(row).remove();
                    });
                    categoriesTable.draw();
                    showToast('تم حذف الباقة المحددة بنجاح', 'success');
                }
            });
            
            // Function to populate edit form with row data
            function populateEditForm(row) {
                // Populate edit form fields using data attributes
                $('#edit-package-name-en').val(row.find('td[data-field="name-en"]').text());
                $('#edit-package-name-ar').val(row.find('td[data-field="name-ar"]').text());
                $('#edit-line-type').val(row.find('td[data-field="line-type"]').text());
                $('#edit-payment-type').val(row.find('td[data-field="payment-type"]').text());
                $('#edit-price').val(row.find('td[data-field="price"]').text());
                $('#edit-package-code').val(row.find('td[data-field="package-code"]').text());
                $('#edit-payment-type-link').val(row.find('td[data-field="payment-type-link"]').text());
                $('#edit-offer-number').val(row.find('td[data-field="offer-number"]').text());
                $('#edit-line-type-link').val(row.find('td[data-field="line-type-link"]').text());
            }
            
            // Function to populate view modal with row data
            function populateViewModal(row) {
                // Populate view modal fields using data attributes
                $('#view-package-name-en').text(row.find('td[data-field="name-en"]').text());
                $('#view-package-name-ar').text(row.find('td[data-field="name-ar"]').text());
                $('#view-line-type').text(row.find('td[data-field="line-type"]').text());
                $('#view-payment-type').text(row.find('td[data-field="payment-type"]').text());
                $('#view-package-price').text(row.find('td[data-field="price"]').text());
                $('#view-package-code').text(row.find('td[data-field="package-code"]').text());
                $('#view-payment-type-link').text(row.find('td[data-field="payment-type-link"]').text());
                $('#view-offer-number').text(row.find('td[data-field="offer-number"]').text());
                $('#view-line-type-link').text(row.find('td[data-field="line-type-link"]').text());
            }
            
            // Handle form submissions
            $('#addCategoryForm').on('submit', function(e) {
                e.preventDefault();
                
                // Get form data
                var packageNameEn = $('#add-package-name-en').val();
                var packageNameAr = $('#add-package-name-ar').val();
                var lineType = $('#add-line-type').val();
                var paymentType = $('#add-payment-type').val();
                var price = $('#add-price').val();
                var packageCode = $('#add-package-code').val();
                var paymentTypeLink = $('#add-payment-type-link').val();
                var offerNumber = $('#add-offer-number').val();
                var lineTypeLink = $('#add-line-type-link').val();
                
                // Add new row to DataTable
                var newRow = categoriesTable.row.add([
                    '<div class="form-check"><input type="checkbox" class="form-check-input category-checkbox"></div>',
                    '<span data-field="id">' + Math.floor(Math.random() * 10000) + '</span>', // ID will be generated
                    '<span data-field="name-en">' + packageNameEn + '</span>',
                    '<span data-field="name-ar">' + packageNameAr + '</span>',
                    '<span data-field="line-type">' + lineType + '</span>',
                    '<span data-field="payment-type">' + paymentType + '</span>',
                    '<span data-field="price">' + price + '</span>',
                    '<span data-field="package-code">' + packageCode + '</span>',
                    '<span data-field="payment-type-link">' + paymentTypeLink + '</span>',
                    '<span data-field="offer-number">' + offerNumber + '</span>',
                    '<span data-field="line-type-link">' + lineTypeLink + '</span>',
                    '<div class="dropdown">' +
                        '<button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">' +
                            'للمزيد' +
                        '</button>' +
                        '<ul class="dropdown-menu dropdown-menu-end" data-bs-popper="static">' +
                            '<li><a class="dropdown-item" href="#" data-action="edit"><i class="ti ti-pencil me-1"></i> تعديل</a></li>' +
                            '<li><a class="dropdown-item" href="#" data-action="view"><i class="ti ti-eye me-1"></i> مشاهدة</a></li>' +
                            '<li><a class="dropdown-item" href="#" data-action="delete"><i class="ti ti-trash me-1"></i> حذف</a></li>' +
                        '</ul>' +
                    '</div>'
                ]).draw().node();
                
                // Clear form and hide modal
                $('#addCategoryForm')[0].reset();
                $('#addCategoryModal').modal('hide');
                
                showToast('تم إضافة الباقة بنجاح', 'success');
            });
            
            $('#editCategoryForm').on('submit', function(e) {
                e.preventDefault();
                
                // Get form data
                var packageNameEn = $('#edit-package-name-en').val();
                var packageNameAr = $('#edit-package-name-ar').val();
                var lineType = $('#edit-line-type').val();
                var paymentType = $('#edit-payment-type').val();
                var price = $('#edit-price').val();
                var packageCode = $('#edit-package-code').val();
                var paymentTypeLink = $('#edit-payment-type-link').val();
                var offerNumber = $('#edit-offer-number').val();
                var lineTypeLink = $('#edit-line-type-link').val();
                
                // For now, we'll just show a success message
                // In a real implementation, you would update the row data
                $('#editCategoryModal').modal('hide');
                
                showToast('تم تعديل الباقة بنجاح', 'success');
            });
            
            // Handle edit from view modal
            $('#editFromViewBtn').on('click', function() {
                // Get data from view modal fields
                var packageNameEn = $('#view-package-name-en').text();
                var packageNameAr = $('#view-package-name-ar').text();
                var lineType = $('#view-line-type').text();
                var paymentType = $('#view-payment-type').text();
                var price = $('#view-package-price').text();
                var packageCode = $('#view-package-code').text();
                var paymentTypeLink = $('#view-payment-type-link').text();
                var offerNumber = $('#view-offer-number').text();
                var lineTypeLink = $('#view-line-type-link').text();
                
                // Populate edit form fields
                $('#edit-package-name-en').val(packageNameEn);
                $('#edit-package-name-ar').val(packageNameAr);
                $('#edit-line-type').val(lineType);
                $('#edit-payment-type').val(paymentType);
                $('#edit-price').val(price);
                $('#edit-package-code').val(packageCode);
                $('#edit-payment-type-link').val(paymentTypeLink);
                $('#edit-offer-number').val(offerNumber);
                $('#edit-line-type-link').val(lineTypeLink);
                
                // Close view modal
                $('#viewCategoryModal').modal('hide');
                
                // Show edit modal
                $('#editCategoryModal').modal('show');
            });
            
            // Function to show Bootstrap toast
            function showToast(message, type) {
                var toastEl = $('#toast');
                var toastBody = $('#toast-body');
                
                // Set message
                toastBody.text(message);
                
                // Set type-specific styling
                toastEl.removeClass('bg-success bg-danger bg-warning bg-info');
                if (type === 'success') {
                    toastEl.addClass('bg-success');
                } else if (type === 'error') {
                    toastEl.addClass('bg-danger');
                } else if (type === 'warning') {
                    toastEl.addClass('bg-warning');
                } else {
                    toastEl.addClass('bg-info');
                }
                
                // Create and show toast
                var toast = new bootstrap.Toast(toastEl[0], {
                    delay: 3000
                });
                toast.show();
            }
        });
    </script>
