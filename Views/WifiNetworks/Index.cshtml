            // Select all functionality
            $('#selectAll').on('change', function() {
                $('.network-checkbox').prop('checked', $(this).prop('checked'));
            });
            
            // Individual checkbox functionality
            $('.network-checkbox').on('change', function() {
                if (!$(this).prop('checked')) {
                    $('#selectAll').prop('checked', false);
                } else {
                    if ($('.network-checkbox:checked').length === $('.network-checkbox').length) {
                        $('#selectAll').prop('checked', true);
                    }
                }
            });
            
            // Handle action buttons
            $('#topEditButton').click(function(e) {
                e.preventDefault();
                var checkedBoxes = $('.network-checkbox:checked');
                if (checkedBoxes.length === 0) {
                    alert('الرجاء تحديد شبكة واحدة على الأقل للتعديل');
                    return;
                }
                
                // For now, we'll just edit the first selected item
                var firstChecked = checkedBoxes.first();
                var row = firstChecked.closest('tr');
                if (row.hasClass('child')) {
                    row = row.prev();
                }
                
                // Get row data
                var networkId = firstChecked.val();
                var networkName = row.find('td:eq(1)').text();
                var accountNumber = row.find('td:eq(2)').text();
                var managementRatio = row.find('td:eq(3)').text();
                var senderName = row.find('td:eq(4)').text();
                var networkStatus = row.find('td:eq(5)').text();
                
