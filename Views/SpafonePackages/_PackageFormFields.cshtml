@model string

<!-- Package form fields partial view -->
<div class="v-section">
  <div class="v-cap">التسديدات > باقات سبافون اغلاق</div>
  
  <!-- Package Basic Information Section -->
  <div class="row g-3">
    <div class="col-md-6">
      <label class="v-label">اسم الباقة* <span class="v-req">*</span></label>
      <input class="v-input form-control" id="@(Model)-package-name" placeholder="ادخل اسم الباقة" type="text" required>
      <div class="invalid-feedback">
        الرجاء إدخال اسم الباقة
      </div>
    </div>
    
    <div class="col-md-6">
      <label class="v-label">السعر* <span class="v-req">*</span></label>
      <input class="v-input form-control" id="@(Model)-package-price" placeholder="السعر" type="number" step="0.01" required>
      <div class="invalid-feedback">
        الرجاء إدخال السعر
      </div>
    </div>
    
    <div class="col-md-6">
      <label class="v-label">كود الباقة الموحد* <span class="v-req">*</span></label>
      <input class="v-input form-control" id="@(Model)-unified-code" placeholder="كود الباقة الموحد" type="text" required>
      <div class="form-text">الكود الي تكتبه هنا هو كود موحد عند جميع انظمة يمن روبوت يجب ان يكون نفس الكود. يمكنك اخذه من المزود تبعك، او التواصل مع يمن روبوت!</div>
      <div class="form-text">الكود الموحد يسهل عمل مبدا انجاح السداد، حيث انه لا يحتاج لتعديل ارقام الربط عندما يسدد النظام من مزود اخر تابع ليمن روبوت!</div>
    </div>
    
    <div class="col-md-6">
      <label class="v-label">الكود* <span class="v-req">*</span></label>
      <input class="v-input form-control" id="@(Model)-connection-id" placeholder="الكود" type="number" required>
      <div class="form-text">رقم الربط يجب اخذه من المزود</div>
    </div>
    
    <div class="col-md-6">
      <label class="v-label">كود الاتصال (يستخدم فقط للتسديد عبر الشرائح. مكان رقم التلفون حط الرمز @@ مكان كلمة السر للشريحة حط pass)* <span class="v-req">*</span></label>
      <input class="v-input form-control" id="@(Model)-call-code" placeholder="كود الاتصال" type="text" required>
      <div class="invalid-feedback">
        الرجاء إدخال كود الاتصال
      </div>
    </div>
    
    <div class="col-md-6">
      <label class="v-label">مبلغ الربط6 (يجب اخذ مبلغ الربط من المزود)* <span class="v-req">*</span></label>
      <input class="v-input form-control" id="@(Model)-provider-amount-6" placeholder="مبلغ الربط6" type="number" step="0.01" required>
    </div>
    
    <div class="col-md-6">
      <label class="v-label">رقم الربط6 (يجب اخذ رقم الربط من المزود)* <span class="v-req">*</span></label>
      <input class="v-input form-control" id="@(Model)-provider-binding-6" placeholder="رقم الربط6" type="text" required>
    </div>
    
    <div class="col-md-6">
      <label class="v-label">تحويل الباقة الى روبوت؟ (اكتب 1 إذا نعم. اترك الحقل فارغاً إذا لا.)* <span class="v-req">*</span></label>
      <input class="v-input form-control" id="@(Model)-convert-to-robot" placeholder="تحويل الباقة الى روبوت" type="number" min="0" max="1" required>
    </div>
    
    <div class="col-md-6">
      <label class="v-label">رقم ربط7 المزود <span class="v-req">*</span></label>
      <input class="v-input form-control" id="@(Model)-provider-binding-7" placeholder="رقم ربط7 المزود" type="text" required>
      <div class="form-text">يجب اخذ رقم الربط من المزود</div>
    </div>
    
    <div class="col-md-6">
      <label class="v-label">رقم ربط8 المزود <span class="v-req">*</span></label>
      <input class="v-input form-control" id="@(Model)-provider-binding-8" placeholder="رقم ربط8 المزود" type="text" required>
      <div class="form-text">يجب اخذ رقم الربط من المزود</div>
    </div>
  </div>
</div>

<!-- Quantity and Pricing Section -->
<div class="v-section">
  <div class="v-cap">الكمية والتسعير</div>
  <div class="row g-3">
    <div class="col-md-6">
      <label class="v-label">الكمية* <span class="v-req">*</span></label>
      <input class="v-input form-control" id="@(Model)-quantity" placeholder="الكمية" type="number" required>
      <div class="invalid-feedback">
        الرجاء إدخال الكمية
      </div>
    </div>
    
    <div class="col-md-6">
      <label class="v-label">سعر الوحدة* <span class="v-req">*</span></label>
      <input class="v-input form-control" id="@(Model)-unit-price" placeholder="سعر الوحدة" type="number" step="0.01" required>
      <div class="invalid-feedback">
        الرجاء إدخال سعر الوحدة
      </div>
    </div>
    
    <div class="col-md-6">
      <label class="v-label">الوصف</label>
      <input class="v-input form-control" id="@(Model)-description" placeholder="الوصف" type="text">
    </div>
    
    <div class="col-md-6">
      <label class="v-label">ضبط السعر</label>
      <div class="input-group">
        <input type="text" class="form-control form-control-sm" id="@(Model)-set-price-input" placeholder="أدخل السعر هنا">
        <button class="btn btn-outline-primary btn-sm" type="button" id="@(Model)-set-price-btn">ضبط</button>
      </div>
      <div class="note-highlight mt-2">
        <i class="ti ti-info-circle"></i>
        اضغط على زر "ضبط" لتعيين السعر لجميع الباقات والشحن الفوري
      </div>
    </div>
  </div>
</div>

<!-- Package Details Section -->
<div class="v-section">
  <div class="v-cap">تفاصيل الباقة</div>
  <div class="row g-3">
    <div class="col-md-4">
      <label class="v-label">رسائل</label>
      <input class="v-input form-control" id="@(Model)-sms" placeholder="رسائل" type="text">
    </div>
    
    <div class="col-md-4">
      <label class="v-label">اتصال</label>
      <input class="v-input form-control" id="@(Model)-calls" placeholder="اتصال" type="text">
    </div>
    
    <div class="col-md-4">
      <label class="v-label">نت</label>
      <input class="v-input form-control" id="@(Model)-internet" placeholder="نت" type="text">
    </div>
  </div>
</div>